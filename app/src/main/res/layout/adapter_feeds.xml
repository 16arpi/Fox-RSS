<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@android:color/white"
              android:id="@+id/feedLinear">
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">
        <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                tools:srcCompat="@drawable/ic_feeds"
                android:id="@+id/feedFavicon"
                android:padding="8dp"
                android:layout_marginEnd="16dp" android:background="@drawable/round_grey_bg"
        />
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:layout_weight="1">
            <TextView
                    android:text="TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/feedTitle"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"/>
            <TextView
                    android:text="TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/feedUrl"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    style="@style/TextAppearance.AppCompat.Body1"/>
        </LinearLayout>

        <CheckBox
                android:layout_width="40dp"
                android:layout_height="40dp" android:id="@+id/feedCheckbox" android:layout_marginStart="16dp"/>
    </LinearLayout>
</LinearLayout>